        <!-- Edit Employee Form -->

        <div id="editEmployeeForm" class="editEmployeeForm">
            <div class="container">
                <div class="col-md-12">
                    <form>
                        <div class="form">
                            <div class="row">
                                <div class="col-md-12 d-flex align-items-center justify-content-between mb-4">
                                    <p class="page_heading h5">Edit Employee</p>
                                    <button type="button" onclick="closeAction()" class="closeAction border-0"><i
                                            class="fa-solid fa-xmark"></i></button>

                                </div>
                            </div>

                            <div class="row justify-content-center">

                                <div class="imageHolder d-flex gap-3 align-items-center mb-4">
                                    <div class="img_input edit_employee">
                                        <img id="edit_EmployeeImage" alt="">
                                    </div>
                                    <div class="changeAction">
                                        <input type="file" accept="/image*" id="edit_upload_file"
                                            style="display: none;">
                                        <label class="btnTxt" for="edit_upload_file"
                                            id="edit-EmployeeImage">Change</label>

                                    </div>
                                </div>



                            </div>
                            <div class="row data_input">

                                <div class="col-md-3 mb-4">
                                    <label for="salutation" class="heading-main mb-3">Salutation</label>
                                    <select id="editSalutation" class="form-select px-3 py-2"
                                        aria-label="Default select example">
                                        <option selected>select</option>
                                        <option value="Mr">Mr</option>
                                        <option value="Mrs">Mrs</option>
                                        <option value="Ms">Ms</option>
                                    </select>
                                </div>

                                <div class="col-md-4 mb-4">
                                    <label for="firstName-editEmployee" class="heading-main mb-3">First Name </label>
                                    <input id="editFirstName" class="form-control px-3 py-2" type="text"
                                        placeholder="john">
                                </div>
                                <div class="col-md-5 mb-4">
                                    <label for="lastName-editEmployee" class="heading-main mb-3">Last Name </label>
                                    <input id="editLastName" class="form-control px-3 py-2" type="text"
                                        placeholder="Doe">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <label for="email-editEmployee" class="heading-main mb-3">Email
                                        address</label>
                                    <input type="email" class="form-control px-3 py-2" id="editEmail"
                                        placeholder="mail@simmmple.com">
                                </div>
                                <div class="col-md-6 mb-4">
                                    <label for="mobileNumber" class="heading-main mb-3">Mobile Number </label>
                                    <input id="editMobileNumber" class="form-control px-3 py-2" type="tel"
                                        placeholder="enter mobile number">
                                </div>
                            </div>
                            <div class="row ">
                                <div class="col-md-6 mb-4">
                                    <label for="date-editEmployee" class="heading-main mb-3">Date of Birth</label>
                                    <input id="editDateOfBirth" class="form-control px-3 py-2" type="date"
                                        placeholder="select date of birth">
                                </div>

                                <div class="col-md-6 d-flex flex-column mb-4">
                                    <div class="heading-main mb-4">
                                        <label for="gender">Gender</label>
                                    </div>

                                    <div class="d-flex gap-5">
                                        <!-- First radio button option: Male -->
                                        <div class="d-flex gap-2">
                                            <input id="flexRadioDefault1" class="form-check-input" type="radio"
                                                name="genderEdit" value="male">
                                            <label for="flexRadioDefault1" class="radio-btn">Male</label>
                                        </div>

                                        <!-- Second radio button option: Female -->
                                        <div class="d-flex gap-2">
                                            <input id="flexRadioDefault1" class="form-check-input" type="radio"
                                                name="genderEdit" value="female">
                                            <label for="flexRadioDefault1" class="radio-btn">Female</label>
                                        </div>
                                    </div>


                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="col-md-12 mb-4">
                                        <label for="qualification-editEmployee"
                                            class="heading mb-3">Qualification</label>
                                        <input id="editQualification" class="form-control px-3 py-2" type="text"
                                            placeholder="enter qualifications">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 mb-4">
                                    <label for="address-editEmployee" class="heading-main mb-3">Address</label>
                                    <input id="editAddress" class="form-control px-3 py-2" type="text"
                                        placeholder="enter address">
                                </div>
                            </div>
                            <div class="row ">
                                <div class="col-md-6 mb-4">
                                    <label for="country" class="heading-main mb-3">country </label>
                                    <select id="editCountry" class="form-select px-3 py-2"
                                        aria-label="Default select example">
                                        <option selected>select country</option>
                                        <option value="India">India</option>
                                        <option value="China">China</option>
                                        <option value="USA">USA</option>
                                    </select>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label for="state" class="heading-main mb-3">state</label>
                                    <select id="editState" class="form-select px-3 py-2"
                                        aria-label="Default select example">
                                        <option selected>select state</option>
                                        <option value="Kerala">Kerala</option>
                                        <option value="TamilNadu">TamilNadu</option>
                                        <option value="Punjab">Punjab</option>
                                    </select>
                                </div>

                            </div>
                            <div class="row ">
                                <div class="col-md-6 mb-4">
                                    <label for="city-editEmployee" class="heading-main mb-3">City</label>
                                    <input id="editCity" class="form-control px-3 py-2" type="text"
                                        placeholder="enter city">

                                </div>

                                <div class="col-md-6 mb-4">
                                    <label for="pinZip-editEmployee" class="heading-main mb-3">Pin/Zip</label>
                                    <input id="editPin" class="form-control px-3 py-2" type="text"
                                        placeholder="enter pin/zip">

                                </div>

                            </div>
                            <div class="row pb-3">
                                <div class=" col-lg-12 justify-content-end ">
                                    <div class="form-footer d-flex gap-2 ">
                                        <button type="button" id="" onclick="closeAction()"
                                            class=" footer-btn px-4 py-3 btn-lg btn btn-light ">
                                            <p class="btn-txt">cancel</p>
                                        </button>
                                        <button type="button" id="saveEditEmployee"
                                            class=" footer-btn px-4 py-3 btn-lg btn btn-primary ">
                                            <p class="btn-txt">Save changes</p>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- </div> -->
                    </form>

                </div>
            </div>
        </div>

        <!-- delete alert -->

        <div class="deleteEmployePopup" id="deleteEmployePopup">
            <div class="container">
                <div class="row justify-content-center">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="cardHeader  d-flex align-items-center justify-content-between">
                                <h5 class="px-0">Delete Employee</h5>
                                <button id="closeBtn" type="button" class="closeAction border-0"><i
                                        class="fa-solid fa-xmark"></i></button>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <p class="dialogue">Are you sure you want to delete this employee?</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="cardFooter d-flex justify-content-end gap-2">
                            <button type="submit" id="cancelDeleteEmployeeId"
                                class="footer-btn  btn px-4 py-3 btn-light">
                                <p class="btnTxt ">Cancel</p>
                            </button>
                            <button type="submit" id="deleteEmployeeId" class="footer-btn btn px-4 py-3 btn-danger">
                                <p class="btnTxt">Delete</p>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div id="overlay" class="overlay"></div>

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="/js/viewDetails.js"></script>
    </body>

    </html>