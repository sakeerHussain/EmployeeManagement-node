                            <div id="EmployeeProfilePic" class="employee_img">

                            </div>
                            <div class="userDetails">
                                <h4 id="EmployeeName">Mr. Michael Johnson</h4>
                                <p id="EmployeeMail">michaeljohnson@example.com</p>
                            </div>
                            <div class="userDetails-body">
                                <div class="details ">
                                    <div class="detailsContainer flex">
                                        <label>Gender</label>
                                        <span id="Gender">Male</span>
                                    </div>
                                    <div class="detailsContainer flex">
                                        <label>Age</label>
                                        <span id="Dob">38</span>
                                    </div>
                                    <div class="detailsContainer flex">
                                        <label>Date of Birth</label>
                                        <span id="Age">20 December 1985</span>
                                    </div>

                                </div>
                                <div class="details">

                                    <div class="detailsContainer flex">
                                        <label>Mobile</label>
                                        <span id="PhoneNumberDetails">9744082307</span>
                                    </div>
                                    <div class="detailsContainer flex">
                                        <label>Qualification</label>
                                        <span id="QualificationsDetails">Bachelor's Degree</span>
                                    </div>
                                </div>
                                <div class="details">
